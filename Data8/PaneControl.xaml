                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                        <sys:String>indicators item</sys:String>
                    </ListBox>
                </TabItem>
            </TabControl>
  </Grid>
</UserControl>
